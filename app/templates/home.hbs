{{page-title 'Zenpage' replace=true}}

<RouteContainer @settings={{@model}}>
  <LinkTo @route="settings" class="btn btn-outline-light">
    <Icons::Gear class="align-text-bottom" />
    <span class="visually-hidden">
      Settings
    </span>
  </LinkTo>

  <InfoModal @hidden={{@model.hideInfoButton}} />

  <TimeDisplay @hidden={{@model.hideTimeDisplay}} />

  <SearchBar @searchEngineUrl={{@model.searchEngineUrl}} @configureSearch={{@model.configureSearch}} @hidden={{@model.hideSearchBar}} />

  {{outlet}}
</RouteContainer>
