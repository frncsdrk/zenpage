<form onsubmit="return false;">
  <div class='mb-3 form-check'>
    <Input
      @type='checkbox'
      class='form-check-input'
      id='configure-search-engine'
      @checked={{this.configureSearch}}
    />
    <label class='form-check-label' for='configure-search-engine'>Configure
      search engine</label>
  </div>
  <div class='mb-3'>
    <label for='search-engine-input' class='form-label'>Search engine</label>
    <Input
      @type='text'
      class='form-control'
      id='search-engine-input'
      aria-describedby='search-engine-help'
      @value={{mut (get this "searchEngineUrl")}}
    />
    <div id='search-engine-help' class='form-text'>e.g.
      https://duckduckgo.com?q=</div>
  </div>
  <button type='submit' class='btn btn-primary' {{on "click" this.apply}}>Apply</button>
</form>
